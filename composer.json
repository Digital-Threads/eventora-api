{
    "name": "api/api",
    "type": "project",
    "description": "API",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.3",
        "ext-bcmath": "*",
        "ext-curl": "*",
        "ext-pdo_pgsql": "*",
        "ext-pgsql": "*",
        "ext-redis": "*",
        "ashallendesign/short-url": "^8.1",
        "bacon/bacon-qr-code": "^2.0",
        "darkaonline/l5-swagger": "^8.4",
        "google/apiclient": "^2.16",
        "guzzlehttp/guzzle": "^7.5",
        "laravel/framework": "^11.0",
        "laravel/passport": "^12.0",
        "laravel/socialite": "^5.16",
        "laravel/tinker": "^2.8",
        "pragmarx/google2fa": "^8.0",
        "pragmarx/google2fa-qrcode": "^3.0",
        "pragmarx/recovery": "^0.2.1",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "brianium/paratest": "^7.0",
        "fakerphp/faker": "^1.21",
        "friendsofphp/php-cs-fixer": "^3.14",
        "larastan/larastan": "^3.0",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^10.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Modules\\": "src/Modules/",
            "Infrastructure\\": "src/Infrastructure/",
            "Domain\\": "src/Domain/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "php -dpcov.directory=. ./vendor/bin/phpunit --coverage-html=./coverage",
        "php-cs-fixer:fix": "./vendor/bin/php-cs-fixer fix ./src ./database ./tests --config=./.php-cs-fixer.php",
        "phpstan": "phpstan --memory-limit=2048M",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "composer/package-versions-deprecated": false
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    }
}
